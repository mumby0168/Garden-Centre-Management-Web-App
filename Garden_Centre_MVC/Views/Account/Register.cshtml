@*//Billy Mumby*@
@model Garden_Centre_MVC.ViewModels.AccountViewModels.RegisterViewModel

<div id="CenteredDiv" align="center">
    
<div class="jumbotron">

    <h2>Register</h2>

    @using (Html.BeginForm("RegisterForm", "Account", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.EmployeeNumber)

            @Html.TextBoxFor(m => m.EmployeeNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.EmployeeNumber)
        </div>


        <div class="form-group">
            @Html.LabelFor(m => m.Username)

            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Username)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password)

            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ReTypePasssword)

            @Html.PasswordFor(m => m.ReTypePasssword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ReTypePasssword)
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    }

</div>
</div>



