@model Garden_Centre_MVC.ViewModels.AccountViewModels.ForgotPasswordViewModel

@Scripts.Render("~/bundles/bootstrap")
@Styles.Render("~/Content/css")






<form id="forgottenPasswordForm">
    <div class="form-group">
        @Html.LabelFor(m => m.Email)

        @Html.EditorFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.EmployeeId)

        @Html.EditorFor(m => m.EmployeeId, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.EmployeeId)
    </div>

    <div class="form-group">
        <label for="input">Hello</label>
        <input type="text" id="input" class="form-control"/>
    </div>


    <button type="submit" class="btn btn-primary">Send</button>
</form>



