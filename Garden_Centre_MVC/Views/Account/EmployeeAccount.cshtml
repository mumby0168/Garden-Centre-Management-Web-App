@model Garden_Centre_MVC.Models.EmployeeLogin

@{
    Layout = "";
}

<script src="../../Scripts/EmployeeDetails.js" type="text/javascript"></script>

<h2>@Model.Employee.FirstName's Account Details</h2>



<a style="color: black; text-decoration: none;" id="PersonalDetailsDown"><h3>Personal Details <i class="fa fa-arrow-circle-down fa-2x"></i></h3></a>
    <div class="row">
        <div id="PersonalDetailsDiv" style="display: none; ">
            <div class="jumbotron">
                <form id="PersonalDetailsForm">
                    <div class="form-group">
                        @Html.LabelFor(e => e.Employee.FirstName)
                        @Html.TextBoxFor(e => e.Employee.FirstName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(e => e.Employee.SecondName)
                        @Html.TextBoxFor(e => e.Employee.SecondName, new { @class = "form-control" })
                    </div>
                   -
                    
                    @Html.HiddenFor(h => h.EmployeeId)
                    <input type="submit" class="btn btn-default" />
                </form>                
                <button class="btn btn-default" id="ClosePersonalDetails">Close</button>
            </div>
        </div>
    </div>
