@model Garden_Centre_MVC.Models.EmployeeLogin

<script src="../../Scripts/Home/Home.js" type="text/javascript"></script>

<h2>@Model.Employee.FirstName's Account Details</h2>


    <h3>Personal Details <i class="fa fa-arrow-circle-down fa-2x" id="PersonalDetailsDown"></i></h3>
    <div class="row">
        <div id="PersonalDetailsDiv" style="visibility: hidden; ">
            <div class="jumbotron">
                <form id="PersonalDetailsForm">
                    <div class="form-group">
                        @Html.LabelFor(e => e.Employee.FirstName)
                        @Html.TextBoxFor(e => e.Employee.FirstName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(e => e.Employee.SecondName)
                        @Html.TextBoxFor(e => e.Employee.SecondName, new { @class = "form-control" })
                    </div>
                    <input type="submit" class="btn btn-default" />
                </form>

            </div>
        </div>
    </div>


<div class="row">
    <div id="AccountDetailsDiv">

    </div>
</div>
