
@model Garden_Centre_MVC.ViewModels.AccountViewModels.LoginViewModel


<h2>Login</h2>


@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{

<div class="form-group">
    @Html.LabelFor(m => m.EmployeeNumber)

    @Html.TextBoxFor(m => m.EmployeeNumber, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.EmployeeNumber)
</div>


    <div class="form-group">
        @Html.LabelFor(m => m.Username)

        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Username)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password)

        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
    

                                                 
}





<br/>

@Html.ActionLink("Register", "Register", "Account", new { @class = "btn btn-danger"})

