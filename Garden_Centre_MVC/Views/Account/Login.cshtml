
@model Garden_Centre_MVC.ViewModels.AccountViewModels.LoginViewModel





<script src="../../Scripts/Account/Account.js" type="text/javascript"></script>

<div id="CenteredDiv" align="center">

    <div id="ForogotPasswordDiv" style="display: none">
        <div class="jumbotron">
            <i id="spinner" class="fa fa-refresh fa-spin" style="font-size: 60px; color: white; display: none;"></i>
        </div>
    </div>

    <div class="jumbotron">
        <h2 id="Title">Login</h2>

        <br />
        <br />

        <div class="row">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {

                <div class="form-group">
                    @Html.LabelFor(m => m.EmployeeNumber)

                    @Html.TextBoxFor(m => m.EmployeeNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.EmployeeNumber)
                </div>


                <div class="form-group">
                    @Html.LabelFor(m => m.Email)

                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password)

                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

                <button type="submit" class="btn btn-primary">Login</button>


                <br />
                <br />
                @Html.ActionLink("Don't have an account? Create one here. ", "Register", "Account")

                <br />
                <br />
                <a id="ForgottonPasswordLink">Forgotten Password?</a>

            }


        </div>

    </div>
</div>