@using Garden_Centre_MVC.Attributes.Assets
@{
    ViewBag.Title = "Home Page";
}


<script src="../../Scripts/Home/Home.js" type="text/javascript"></script>

<div class="jumbotron" style="padding: 15px;">
    <div class="row" style="margin-bottom: 5px;">
        <div align="left" class="col-md-4">
            <a href="/Home"><h3 align="center" style="margin-bottom: 20px; color:black">Garden Centre <i class="fa fa fa-plus-circle"></i></h3></a>
        </div>
        <div class="col-md-2" align="center">
            
        </div>
        
        <div align="right" class="col-md-4">
            <h3>@CurrentUser.EmployeeLogin.Employee.FirstName @CurrentUser.EmployeeLogin.Employee.SecondName</h3>
        </div>

        <div  align="right" class="col-md-2">
            <a href="Account/Logoff">
                <h3 style="color: black;">
                    Logoff
                    </h3>
            </a>            
        </div>
    </div>
</div>


@Html.Hidden("id", CurrentUser.EmployeeLogin.EmployeeLoginId, new {@id = "UsersId"})

<div id="MainPageContainer">
    <div class="row">

        <div align="center" class="col-md-6">
            <a style="cursor: pointer; color: black;" id="TransactionsLandingLink">
                <div class="jumbotron">
                    <i class="fa fa-5x fa-gbp"></i>
                    <h3>Transactions</h3>
                </div>
            </a>
        </div>



        <div align="center" class="col-md-6">
            <a style="cursor: pointer; color: black;" id="CustomerLandingLink">
                <div class="jumbotron">
                    <i class="fa fa-5x fa-users"></i>
                    <h3>Customers</h3>
                </div>
            </a>
        </div>

    </div>
                                                             
    <div align="center" class="row">
        <div class="col-md-6">
            <a style="cursor: pointer; color: black;" id="InventoryLandingLink">
                <div class="jumbotron">
                    <i class="fa fa-5x fa-list-alt"></i>
                    <h3>Inventory</h3>
                </div>
            </a>
        </div>
        
        @if (CurrentUser.EmployeeLogin.Employee.Admin)
        {
            <div align="center" class="col-md-6">
                <a style="cursor: pointer; color: black;" id="EmployeeLandingLink">
                    <div class="jumbotron">
                        <i class="fa fa-5x fa-user"></i>
                        <h3>Employees</h3>
                    </div>
                </a>
            </div>
        }
        else
        {
            <div align="center" style="opacity: 0.5; " class="col-md-6">
                <a style="cursor: pointer; color: black;  pointer-events: none; cursor: default; text-decoration: none;color: gray; opacity: 0.2;" id="EmployeeLandingLink">
                    <div class="jumbotron">
                        <i class="fa fa-5x fa-lock"></i>
                        <h3>Employees</h3>
                    </div>
                </a>
            </div>
        }
    </div>
    
    <div class="row">

        @if (CurrentUser.EmployeeLogin.Employee.Admin)
        {
            <div align="center" class="col-sm-12">
                <a style="cursor: pointer; color: black;" id="ActionLogLandingLink">
                    <div class="jumbotron">
                        <div align="center">
                            <i class="fa fa-pencil fa-3x"></i>
                            <h3>Action Log</h3>
                        </div>
                        <div align="left">

                        </div>
                    </div>
                </a>
            </div>
        }
        else
        {
            <div align="center"  style="opacity: 0.5;" class="col-sm-12">
                <a style="cursor: pointer; color: black;  pointer-events: none; cursor: default; text-decoration: none;color: gray; opacity: 0.2;" id="ActionLogLandingLink">
                    <div class="jumbotron">
                        <div align="center">
                            <i align="left" class="fa fa-5x fa-lock"></i>
                            <h3>Action Log</h3>
                        </div>
                    </div>
                </a>
            </div>
        }

    </div>

</div>