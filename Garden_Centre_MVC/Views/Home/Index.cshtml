@using Garden_Centre_MVC.Attributes.Assets
@{
    ViewBag.Title = "Home Page";
}
<script src="../../Scripts/Home/Home.js" type="text/javascript"></script>

<div class="jumbotron" style="padding: 15px;">
    <div class="row" style="margin-bottom: 5px;">
        <div align="left" class="col-md-6">
            <h5>Logged in as: @CurrentUser.EmployeeLogin.Username</h5>
        </div>
        <div align="right" class="col-md-6">
            <a href="Account/Logoff" style="color: white;">
                <h5>Logoff</h5>
            </a>
        </div>
    </div>
</div>




<div id="MainPageContainer">
    <div class="row">

        <div align="center" class="col-md-6">
            <a style="cursor: pointer; color: lightskyblue;" id="TransactionsLandingLink">
                <div class="jumbotron">
                    <i class="fa fa-5x fa-gbp"></i>
                    <h3>Transactions Landing Page</h3>
                </div>
            </a>
        </div>



        <div align="center" class="col-md-6">
            <a style="cursor: pointer; color: lightskyblue;" id="CustomerLandingLink">
                <div class="jumbotron">
                    <i class="fa fa-5x fa-users"></i>
                    <h3>Customer Landing Page</h3>
                </div>
            </a>
        </div>

    </div>
                                                             
    <div align="center" class="row">
        <div class="col-md-6">
            <a style="cursor: pointer; color: lightskyblue;" id="InventoryLandingLink">
                <div class="jumbotron">
                    <i class="fa fa-5x fa-list-alt"></i>
                    <h3>Inventory Landing Page</h3>
                </div>
            </a>
        </div>
        
        @if (CurrentUser.EmployeeLogin.Employee.Admin)
        {
            <div align="center" class="col-md-6">
                <a style="cursor: pointer; color: lightskyblue;" id="EmployeeLandingLink">
                    <div class="jumbotron">
                        <i class="fa fa-5x fa-user"></i>
                        <h3>Employee Landing Page</h3>
                    </div>
                </a>
            </div>
        }
        else
        {
            <div align="center" style="opacity: 0.5; " class="col-md-6">
                <a style="cursor: pointer; color: lightskyblue;  pointer-events: none; cursor: default; text-decoration: none;color: gray; opacity: 0.2;" id="EmployeeLandingLink">
                    <div class="jumbotron">
                        <i class="fa fa-5x fa-lock"></i>
                        <h3>Employee Landing Page</h3>
                    </div>
                </a>
            </div>
        }
    </div>
    
    <div class="row">

        @if (CurrentUser.EmployeeLogin.Employee.Admin)
    {
        <div align="center" class="col-sm-12">
            <a style="cursor: pointer; color: lightskyblue;" id="ActionLogLandingLink">
                <div class="jumbotron">
                    <div align="center">
                        <i class="fa fa-pencil fa-3x"></i>
                        <h3>Action log</h3>
                    </div>
                    <div align="left">

                    </div>
                </div>
            </a>
        </div>
}
else
{
    <div align="center" class="col-sm-12">
        <a style="cursor: pointer; color: lightskyblue;  pointer-events: none; cursor: default; text-decoration: none;color: gray; opacity: 0.2;" id="ActionLogLandingLink">
            <div class="jumbotron">
                <div align="center">
                    <i align="left" class="fa fa-lock fa-5x"></i>
                    <h3>Action log</h3>
                </div>                
            </div>
        </a>
    </div>
}

    </div>

</div>