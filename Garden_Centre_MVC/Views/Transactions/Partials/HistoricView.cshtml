@model Garden_Centre_MVC.ViewModels.TransactionsViewModel

<div class="container _partial_outline" style="margin:1%;padding:1%;">
    <h1 style="text-align:center;">Transactions</h1>
    <br />
    <button class="btn btn-primary">Add</button>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    <h2>Tansaction ID</h2>
                </th>
                <th>
                    <h2>Date</h2>
                </th>
                <th>
                    <h2>Value</h2>
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        @for (int i = 0; i < Model.Transactions.Count && i < 20; i++)
        {
            <tr>
                <td><h3>@Model.Transactions[i].TransactionNumber</h3></td>
                <td><h3>@Model.Transactions[i].Date.Day/@Model.Transactions[i].Date.Month/@Model.Transactions[i].Date.Year</h3></td>
                <td><h3>£ @Model.Transactions[i].Value</h3></td>
                <td><button class="btn btn-primary" style="margin-top:15%; vertical-align:central;">Edit</button></td>
                <td><button class="btn btn-primary" style="margin-top:10%; vertical-align:central;">Remove</button></td>
            </tr>
        }
    </table>
</div>