@model Garden_Centre_MVC.ViewModels.Transactions.HistoricViewModel
@{
    //TODO: Fix the table row disapearing try to animate it
    //TODO: Sort the padding on the exteneded view
    //TODO: Implement a smooth change between view and edit for the same transaction
    //TODO: Fix weird bug that causes the time to lose an hour when saving an edit
}
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Transaction Number</td>
            <td>Date</td>
            <td>Time</td>
            <td>Customer</td>
            <td>Total Value</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (Garden_Centre_MVC.Models.TransactionOverview to in Model.TransactionOverviews)
        {
            <tr>
                <td>@to.TransactionNumber</td>
                <td>@to.Date.Day/@to.Date.Month/@to.Date.Year</td>
                <td>@to.Date.Hour:@to.Date.Minute:@to.Date.Second</td>
                <td>@to.Customer.FullName</td>
                <td>£@to.TotalValue</td>
                <td>
                    <button transactionNumber="@to.TransactionNumber" class="viewBtn btn btn-primary" title="View the indiviudal items that make up this transaction !"><i class="fa fa-eye"></i></button>
                    @if (Garden_Centre_MVC.Attributes.Assets.CurrentUser.EmployeeLogin.Employee.Admin)
                    {
                        <button transactionNumber="@to.TransactionNumber" class="editBtn btn btn-primary" title="Edit the contents of this transaction !"><i class="fa fa-edit"></i></button>
                        <button transactionNumber="@to.TransactionNumber" class="delBtn btn btn-primary" title="Delete this transaction !"><i class="fa fa-trash"></i></button>
                    }
                </td>
            </tr>
            <tr id='@("Historic_DropDownViewTR"+@to.TransactionNumber)' style="display:none; padding:0px;">
                <td id='@("Historic_DropDownViewTD"+@to.TransactionNumber)' colspan="6">
                    <div id='@("Historic_DropDownView"+@to.TransactionNumber)' hidden="hidden">

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


<script type="text/javascript">
    var prevOpenedTN = '0';
    $(document).ready(function () {
        $(".viewBtn").on("click", function (e) {
            e.preventDefault();
            var transactionNumber = $(this).attr("transactionNumber");
            $.ajax(
            {
                type: "POST",
                data: ({ _transactionNumber: transactionNumber }),
                url: '@Url.Action("ExtendedView", "Transactions")',
                success: function (result) {
                    $("#Index_AddView").delay(100).slideUp("slow");

                    $("#Historic_DropDownViewTR" + transactionNumber).attr("style", "display:table-row;");
                    $("#Historic_DropDownView" + transactionNumber).delay(100).slideDown("slow").html(result);

                    if (prevOpenedTN !== '0' && prevOpenedTN !== transactionNumber) {
                        $("#Historic_DropDownView" + prevOpenedTN).delay(100).slideUp("slow", "swing", function (e) {
                            $("#Historic_DropDownViewTR" + prevOpenedTN).attr("style", "display:none;");
                            prevOpenedTN = transactionNumber;
                        });
                    }
                    else
                    {
                        prevOpenedTN = transactionNumber;
                    }

                },
                error: function (x, e, r) {
                    alert(e + " " + r);
                    alert(x.responseText);
                }
            });
        });

        $(".editBtn").on("click", function (e) {
            e.preventDefault();
            var transactionNumber = $(this).attr("transactionNumber");

            $.ajax(
            {
                type: "POST",
                data: ({ _transactionNumber: transactionNumber }),
                url: '@Url.Action("EditView", "Transactions")',
                success: function (result) {
                    $("#Index_AddView").delay(100).slideUp("slow");

                    $("#Historic_DropDownViewTR" + transactionNumber).attr("style", "display:table-row;");
                    $("#Historic_DropDownView" + transactionNumber).delay(100).slideDown("slow").html(result);

                    if (prevOpenedTN !== '0' && prevOpenedTN !== transactionNumber) {
                        $("#Historic_DropDownView" + prevOpenedTN).delay(100).slideUp("slow", "swing", function (e) {
                            $("#Historic_DropDownViewTR" + prevOpenedTN).attr("style", "display:none;");
                            prevOpenedTN = transactionNumber;
                        });
                    }
                    else
                    {
                        prevOpenedTN = transactionNumber;
                    }

                },
                error: function (x, e, r) {
                    alert(e + " " + r);
                    alert(x.responseText);
                }
            });
        });

        $(".delBtn").on("click", function (e) {
            e.preventDefault();
            var transactionNumber = $(this).attr("transactionNumber");

            if (confirm("Are you sure you wish to delete this transaction ?")) {
                $.ajax(
                    {
                        type: "POST",
                        data: ({ _transactionNumber: transactionNumber }),
                        url: '@Url.Action("DeleteTransaction", "Transactions")',
                        success: function (result) {
                            $("#Index_Feedback").slideUp("slow", "swing", function (e) {
                                $("#Index_Feedback").delay(100).slideDown("slow").html("<h1>Successfully Deleted The Transaction</h1>").delay(3000).slideUp("slow");
                            });
                            $("#View").html(result);
                        },
                        error: function (x, e, r) {
                            alert(e + " " + r);
                            alert(x.responseText);
                        }
                    });
            }
        });
    });
</script>