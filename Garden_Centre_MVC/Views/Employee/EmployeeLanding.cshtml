@using Garden_Centre_MVC.Models
@model Garden_Centre_MVC.ViewModels.EmployeeViewModels.EmployeeLandingViewModels


<script src="../../Scripts/Employee/Employee.js" type="text/javascript"></script>

<div class="row">
    <h2>Employees</h2>
</div>


<div class="row">
    <button class="btn btn-primary" id="AddEmployeeBtn"><i class="fa fa-plus"></i> Add Employee</button>
    
    <br/>
    <br/>

    <table class="table table-striped table-bordered table-hover" id="employeeTable">
        <thead>
        <tr>
            <td>Name</td>
            <td>Employee Number</td>
            <td>Admin</td>
            <td>Operations</td>
        </tr>
        </thead>

        <tbody>
        @foreach (var emp in Model.Employees)
        {
            <tr>
                <td>@emp.FirstName @emp.SecondName</td>

                <td>@emp.EmployeeNumber</td>

            @if (emp.Admin)
            {
             <td>Yes</td>
            }
            else
            {
                <td>No</td>
            }
                <td>
                    <button empId="@emp.EmployeeId" class="EditLink  btn "><i class="fa fa-edit"></i></button> 

                    <button empId=@emp.EmployeeId class="RemoveLink btn "><i class="fa fa-remove"></i> </button>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div id="EmployeeFormDiv" class="jumbotron" style="display: none"></div>


</div>




