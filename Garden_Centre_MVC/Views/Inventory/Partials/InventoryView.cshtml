@model Garden_Centre_MVC.ViewModels.InventoryViewModels.InventoryViewModel

<table class="table table-hover">
    <thead>
        <tr>
            <td>Item ID</td>
            <td>Name</td>
            <td>Price</td>
            <td>In Stock</td>
            <td>On Order</td>
            <td>Sold</td>
            <td>Operations</td>
        </tr>
    </thead>
    <tbody>
        @foreach (Garden_Centre_MVC.Models.Item i in Model.inventory)
        {
            <tr>
                <td>@i.ItemId</td>
                <td>@i.Description</td>
                <td>@i.ItemPrice</td>
                <td>@i.Stock</td>
                <td>@i.OnOrder</td>
                <td>@i.Sold</td>
                <td>
                    <button invId="@i.ItemId" class="invEditBtn btn btn-primary">Edit</button>
                </td>
            </tr>
        }
    </tbody>
</table>